                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="email" type="hidden" value=@HttpContextAccessor.HttpContext.Request.Cookies["current_user_email"] class="form-control" />
